@media (max-width 600px) {
	.header-spacer {
		height 50px
	}

	.header {
		position absolute
		display block
		top 0
		left 0
		height 50px
		width 100vw
		background-color #000
		overflow hidden
		transition height 0.5s ease-out, background-color 0.5s ease-out
		transition-delay 0.2s
		z-index 1
		display flex
		flex-direction column

		nav {
			display flex
			justify-content space-between
			z-index 3
			transition 0.3s margin-bottom

			.burger-container {
				position relative
				display inline-block
				height 50px
				width 50px
				cursor pointer
				transform rotate(0deg)
				transition all 0.3s cubic-bezier(0.4, 0.01, 0.165, 0.99)
				-webkit-user-select none
				-moz-user-select none
				-ms-user-select none
				user-select none
				-webkit-tap-highlight-color transparent

				#burger {
					width 18px
					height 8px
					position relative
					display block
					margin -4px auto 0
					top 50%

					.bar {
						width 100%
						height 1px
						display block
						position relative
						background #FFF
						transition all 0.3s cubic-bezier(0.4, 0.01, 0.165, 0.99)
						transition-delay 0s
					}

					.bar.topBar {
						transform translateY(0px) rotate(0deg)
					}

					.bar.btmBar {
						transform translateY(6px) rotate(0deg)
					}
				}
			}

			.icon {
				height 100%
				line-height 50px
				width 50px
				height 50px
				text-align center
				color #FFF
				font-size 22px
				left 50%
				// transform translateX(-50%)
			}

			.icon.title {
				width 100px
				transform scale(1) translateY(0px)
				transition 0.3s transform

				img {
					height 100%

					&.vertical {
						display none
					}
				}
			}

			.icon.icon-bag {
				right 0
				top 0
				left auto
				transform translateX(0px)
				transition transform 0.5s cubic-bezier(0.4, 0.01, 0.165, 0.99)
				transition-delay 0.65s
			}

			.menu-alignment {
				width 50px
			}
		}

		ul.menu {
			position relative
			display block
			padding 0px 48px 0
			list-style none
			margin auto 0
			text-align center
			text-transform uppercase
			font-weight bold
			color #fff

			li.menu-item {
				margin-top 5px
				transform scale(1.15) translateY(-30px)
				opacity 0
				transition transform 0.5s cubic-bezier(0.4, 0.01, 0.165, 0.99), opacity 0.6s cubic-bezier(0.4, 0.01, 0.165, 0.99)

				for child in 1 .. 3 {
					&:nth-child({child}) {
						transition-delay 0.07s * (child - 1)
					}
				}

				a {
					display block
					position relative
					color inherit
					font-family inherit
					text-decoration none
					font-size 22px
					line-height 2.35
					width 100%
				}
			}

			&.icons {
				color #a06a0e

				li.menu-item a {
					font-size 32px
					line-height 1.85
				}
			}
		}

		&.menu-opened {
			height 100%
			background-color #000
			transition all 0.3s ease-in, background-color 0.5s ease-in

			nav {
				margin-bottom 100px

				.burger-container {
					transform rotate(90deg)

					#burger .bar {
						transition all cubic-bezier(0.4, 0.01, 0.165, 0.99)

						&.topBar {
							transform translateY(4px) rotate(45deg)
						}

						&.btmBar {
							transform translateY(3px) rotate(-45deg)
						}
					}
				}

				.icon.title {
					transform scale(2) translateY(20px)
					transition 0.3s transform 0.2s
				}
			}

			ul.menu li.menu-item {
				transform scale(1) translateY(0px)
				opacity 1

				for child in 1 .. 3 {
					&:nth-child({child}) {
						transition-delay 0.2s + (child - 1) * 0.07s
					}
				}
			}

			.icon.icon-bag {
				transform translateX(75px)
			}
		}
	}
}

@media screen and (min-width 601px) {
	body {
		display flex
		flex-direction row
	}

	.header {
		max-width 60px
		padding 15px
		background-color black
		height 100vh
		display flex
		flex-direction column
		justify-content space-between
	}

	nav {
		display flex
		flex-direction column

		.burger-container, .menu-alignment {
			display none
		}

		.icon.title {
			img {
				width 100%
				transform scale(2.5) rotate(180deg)
				margin-block 50px

				&.horizontal {
					display none
				}
			}
		}
	}

	ul.menu {
		a {
			text-decoration none
			color #818181
			transition 0.3s color

			&:hover {
				color #fff
			}
		}

		&.links {
			list-style none
			padding 0
			display flex
			flex-direction row-reverse
			gap 50px
			margin auto
			text-transform uppercase
			font-size 14px
			align-items baseline
			writing-mode vertical-rl
			text-orientation mixed
			transform rotate(180deg)
		}

		&.icons {
			padding 0
			color #fff
			margin 0 auto
			list-style none
			display flex
			flex-direction column
			gap 20px

			a {
				color #a06a0e
				transition 0.3s color
				font-size 26px

				&:hover {
					color #fff
				}
			}
		}
	}
}

