nav {
  display: flex;
  flex-direction: column;
  max-width: 100vw;
  background-color: #000;
}
nav.open {
  height: 100vh;
  position: sticky;
  top: 0;
}
.header {
  display: flex;
  padding: 10px;
  align-items: center;
  justify-content: space-between;
}
.menu {
  font-size: 32px;
  color: #fff;
}
.menu.invisible {
  visibility: hidden;
}
.banner.horizontal {
  display: none;
}
.banner.vertical {
  max-height: 60px;
}
.content {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  gap: 30px;
  margin: auto;
}
.content ul {
  list-style: none;
  padding: 0;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 30px;
  align-items: center;
}
.content ul li a {
  text-transform: uppercase;
  color: #818181;
  text-decoration: none;
  font-size: 1.5em;
}

@media screen and (min-width: 600px) {
  nav {
    max-width: 60px;
    padding: 15px;
    background-color: black;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }
  ul.nav > li > a {
    text-decoration: none;
    color: #818181;
    transition: .3s color;
  }
  ul.nav {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: row-reverse;
    gap: 50px;
    margin: auto;
    text-transform: uppercase;
    font-size: 14px;
    align-items: baseline;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transform: rotate(180deg);
  }
  ul.nav > li > a:hover {
    color: #fff;
  }
  .banner.vertical {
    display: none;
  }
  .banner.horizontal {
    display: block;
    max-width: 100%;
    transform: rotate(180deg);
  }
  ul.links {
    padding: 0;
    color: #fff;
    margin: 0 auto;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  ul.links > li > a {
    color: #a06a0e;
    transition: .3s color;
    font-size: 26px;
  }
  ul.links > li > a:hover {
    color: #fff;
  }

}
